{
  "compilerOptions": {
    "target": "ES5",
    "module": "esnext",
    "downlevelIteration": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/components": ["./components/index"],
      "~/context": ["./context/index"],
      "~/hooks": ["./hooks/index"],
      "~/layouts": ["./layouts/index"],
      "~/lib/*": ["./lib/*"],
      "~/styles": ["./styles/index"],
      "~/types": ["./types/index"],
      "~/util": ["./util/index"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "exclude": ["node_modules", ".next", ".husky", "dist", "public"],
  "include": [
    "generateFavicons.js",
    "next.config.js",
    "next-env.d.ts",
    "./components/**/*.ts",
    "./components/**/*.tsx",
    "./context/**/*.ts",
    "./context/**/*.tsx",
    "./hooks/**/*.ts",
    "./hooks/**/*.tsx",
    "./layouts/**/*.ts",
    "./layouts/**/*.tsx",
    "./lib/**/*.ts",
    "./pages/**/*.ts",
    "./pages/**/*.tsx",
    "./types/**/*.ts",
    "./types/*.d.ts",
    "./util/**/*.ts"
  ]
}
