{
  "compilerOptions": {
    "target": "ES5",
    "module": "esnext",
    "downlevelIteration": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/components": ["./src/components/index"],
      "~/context": ["./src/context/index"],
      "~/hooks": ["./src/hooks/index"],
      "~/layouts": ["./src/layouts/index"],
      "~/lib": ["./lib/index"],
      "~/lib/api": ["./lib/api/index"],
      "~/lib/server": ["./lib/server/index"],
      "~/lib/edge": ["./lib/edge/index"],
      "~/queries": ["./src/queries/index"],
      "~/theme": ["./src/theme/index"],
      "~/types": ["./src/types/index"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noUnusedLocals": true
  },
  "exclude": ["node_modules", ".next", ".husky", "dist", "public", "generate-favicons.ts"],
  "include": [
    "codegen.ts",
    "middleware.ts",
    "next.config.mjs",
    ".eslintrc.*",
    "next-env.d.ts",
    "src/**/*",
    "lib/**/*",
    "global.d.ts",
    "./pages/**/*.ts",
    "./pages/**/*.tsx"
  ]
}
